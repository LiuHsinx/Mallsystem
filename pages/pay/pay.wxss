/* 地址  */

.address {
  display: flex;
  background-color: #fff;
  margin: 15rpx;
  border-bottom: 1px solid gainsboro;
  padding: 25rpx;
}

.address_image {
  height: 65rpx;
  width: 65rpx;
  position: relative;
  top: 50%;
  bottom: 50%;
  transform: translate(-50%,-50%);
  padding-left: 45rpx;
}

.address_name {
  font-size: 35rpx;
  color: black;
  margin-left: -25rpx;
}
.address_phone {
  color: gray;
  font-size: 28rpx;
  margin-left: 15rpx;
}

.address_desc {
  float: left;
  font-size: 30rpx;
  width: 550rpx;
  color: black;
  padding-bottom: 15rpx;
  margin-left: 80rpx; 
}

.right {
  border: solid gainsboro;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  margin-top: -12rpx;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.address_add {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 13px;
  background: white;
}

/* 订单明细 */
.cart {
  margin: 13rpx;
}
.mingxi_item {
  display: flex;
  padding: 10rpx;
  justify-content: space-between;
  border-bottom: 1px solid gainsboro;
  font-size: 30rpx;
  
}
.cai_img {
  flex-shrink: 0;   /*解除图片变形*/
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  line-height: 120rpx;
  text-align: center;
  margin-left: 5rpx;
  margin-right: 30rpx;
}


.good_name {
  font-size: 30rpx;
  color: gray;
  width: 400rpx;
  height: 50rpx;
  margin-left: -30rpx;
  margin-top: 10rpx;
  /* 超过12个字省略号 */
  font-weight: 12;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
}
.base_color {
  color: var(--themeColor);
  margin-top: 10rpx;
}
/* 输入框样式 */
input {
  margin-top: 15rpx;
  padding: 15rpx;
}

/*弹窗遮罩层  */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background: #000;
  z-index: 666;
}

/*选择支付方式弹窗  */
.cart_popup {
  width: 100%;
  height: 285px;
  background: #fff;
  position: fixed;
  z-index: 999;
  left: 0;
  bottom: -285px;
  overflow: auto;
}

.shopcart_title {
  width: 100%;
  height: 75rpx;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  left: 0;
  background-color: var(--themeColor);
  color: #fff;
}

/*返回按钮  */
.shopcart_close {
  position: absolute;
  right: 30rpx;
  font-size: 28rpx;
}


/*模拟支付  */

.cart_cells {
  width: 100%;
  height: 98rpx;
  position: relative;
  border-bottom: 1px #dedede solid;
}

.cells_name {
  padding-left: 20rpx;
  width: 50%;
  position: absolute;
  left: 0;
  top: 35rpx;
}

.price-box {
  width: 40%;
  font-size: 32rpx;
  position: absolute;
  left: 60%;
  top: 35rpx;
  color: var(--themeColor);
}

/*提交订单按钮 */
.footer_box {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0rpx;
  z-index: 100;
  background-color: #fff;
}

/*总计金额、件数  */
.all_money {
  width: 90%;
  margin: 0 auto;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: #09ba07;
  border-radius: 20rpx;
}