
/* 顶部轮播图 */
swiper {
  height: 800rpx;
  width: 100%;
}

.root {
  margin-bottom: 115rpx;
}

/* 商品信息区域 */
.good_root {
  background-color: #fff;
  padding: 20rpx;
  margin: 13rpx;
  border-bottom: 1px gainsboro solid;
}

.good_title {
  font-weight: 400;
  font-size: 36rpx;
  width: auto;
}
/* 商品描述 */
.good_content {
  font-size: 27rpx;
  color: #858585;
  margin-top: 15rpx;
}
.good_label {
  font-size: 25rpx;
  font-weight: bold;
  color: #858585;
  width: 125rpx;
  border-radius: 50rpx;
  text-align: center;
  background-color: rgb(246, 199, 131);
  color: rgb(119, 74, 32);
  position: absolute;
  margin-top: -8rpx;
}
.good_num {
  font-size: 27rpx;
  color: #858585;
  width: 175rpx;
  margin-left: 520rpx;
}

/*价格与数量加减器*/
.price-stepper {
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.good_spec {
  font-size: 25rpx;
  color: #858585;
  margin-left: 150rpx;
  margin-top: 22rpx;
}
.good_price {
  /*价格*/
  font-weight: bold;
  font-size: 30rpx;
  color: var(--themeColor);
  margin-top: 20rpx;
}

.good_price:before {
  /*人民币符号*/
  content: "￥";
  font-size: 30rpx;
}

.stepper {
  /*加减器*/
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding-right: 10rpx;
  margin-top: 15rpx;
}

.jiajian {
  /* 加减图标 */
  width: 40rpx;
  height: 40rpx;
  margin-top: 8rpx;
}

.value {
  /*购买数量*/
  font-size: 28rpx;
  margin: 0 20rpx;
  font-weight: bold;
}


/* 评价列表样式 */

.comment {
  padding: 10rpx;
  margin: 13rpx;
}
.pingjia_tip {
  font-size: 36rpx;
  margin: 10rpx;
}

.item_root {
  padding-bottom: 10rpx;
}

.top_root {
  display: flex;
  flex-direction: row;
  /* 上下居中 */
  align-items: center;
}

.img_left {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  vertical-align: middle;
  margin: 15rpx;
}

.top_right {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 27rpx;
  margin-left: 10rpx;
  color: black;
}

.score {
  font-size: 27rpx;
  margin-left: 30rpx;
  color: var(--themeColor);
}

.content {
  margin: 5rpx 20rpx;
  font-size: 25rpx;
  line-height: 40rpx;
}

/* 数据为空 */
.nothing {
  margin-top: 40rpx;
  text-align: center;
}

/* 底部购物车 */
/*底部区域  */

.bottom_box {
  width: 100%;
  height: 80rpx;
  position: fixed;
  left: 0;
  bottom: 0px;
  z-index: 100;
  background-color: #fef4d1;
}

.shop_cartBox {
  width: 110rpx;
  height: 110rpx;
  background-color: var(--themeColor);
  border-radius: 50%;
  position: absolute;
  top: -50rpx;
  left: 40rpx;
}

.shopCart_img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 24rpx;
  left: 24rpx;
}
.choose_num {
  position: absolute;
  width: 110rpx;
  color: #8a8a8a;
  height: 80rpx;
  top: 0;
  margin-left: 170rpx;
  line-height: 80rpx;
  font-size: 25rpx;
}
.all_money {
  position: absolute;
  width: 280rpx;
  height: 80rpx;
  top: 0;
  margin-left: 280rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.choose_ok {
  position: absolute;
  width: 25%;
  height: 80rpx;
  top: 0;
  right: 0;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 38rpx;
  background-color: var(--themeColor);
}

.fontP {
  color: var(--themeColor);
  font-size: 40rpx;
}

/*弹窗遮罩层  */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background: #000;
  z-index: 666;
}

/*购物车弹窗  */

.cart_popup {
  width: 100%;
  height: 285px;
  background: #fff;
  position: fixed;
  z-index: 999;
  left: 0;
  bottom: -285px;
  overflow: auto;
}

.shopcart_title {
  width: 100%;
  height: 70rpx;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  left: 0;
  background-color: var(--themeColor);
  color: #fff;
}

/*关闭按钮  */

.shopcart_close {
  position: absolute;
  left: 30rpx;
  font-size: 28rpx;
}

/*清空购物车  */

.shopcart_deleteAll {
  position: absolute;
  right: 30rpx;
  font-size: 28rpx;
}

.margin_r {
  margin-right: 30rpx;
}

/*购物车列表  */

.cart_cells {
  width: 100%;
  height: 98rpx;
  position: relative;
  border-bottom: 1px #dedede solid;
}

.cells_name {
  width: 40%;
  height: 50%;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 14px;
  margin-left: 40rpx;
  padding-top: 10rpx;
  /* 超过9个字省略号 */
  font-weight: 9;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;


}

.cells_price {
  width: 60%;
  height: 50%;
  position: absolute;
  top: 50rpx;
  left: 0;
  margin-left: 40rpx;
  font-size: 14px;
  padding-bottom: 10rpx;
  color: var(--themeColor);
}
.cells_price:before {
  content: "￥";
  font-size: 12px;
}

.price-box {
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 20%;
  position: absolute;
  left: 60%;
  top: 20rpx;
}

/*删除购物车某项  */

.shopcart_delete {
  position: absolute;
  right: 40rpx;
  top: 32rpx;
}


/* 还未登录时的弹窗 */
.toast_box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
}

.toastbg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background: #000;
  z-index: 666;
}


.showToast {
  position: absolute;
  background: white;
  opacity: 1;
  width: 100%;
  height: 300rpx;
  bottom: 0;
  z-index: 888;
}

.toast_btn {
  width: 90%;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}