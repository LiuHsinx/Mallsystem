/* 顶部菜单切换 */
page {
  background-color: gainsboro;
}

.navbar {
  display: flex;
  background: #fff;
}

/* 没有数据时 */
.none_tab {
  position: relative;
  top: 20rpx;
  color: #999;
  font-size: 32rpx;
}

.navbar .item {
  /* 默认选中菜单 */
  position: relative;
  flex: auto;
  font-size: 27rpx;
  width: 100rpx;
  text-align: center;
  line-height: 80rpx;
  color: gray;
  border-bottom: 3rpx solid #ddd;
}

.navbar .item.active {
  /* 选中菜单样式 */
  color: #FE2E2E;
  border-bottom: 6rpx solid #FE2E2E;
}


.navbar .item.active:after {
  /* 字体 */
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}

/* 全部 */

.cont_count {
  background-color: white;
  margin: 8rpx;
  border-radius: 20rpx;
}

.dingdanbianhao {
  /* 订单编号 */
  padding: 10rpx 40rpx;
  font-size: 25rpx;
  color: gray;
  border-bottom: 1rpx solid #d4d4d4;
}


/* 内容区域 */
.content {
  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  justify-items: center;
  align-items: center;
}

.mingxi {
  /* 订单明细 */
  display: flex;
  flex-direction: column;
  flex: 5;
  font-size: 28rpx;
  padding: 15rpx;
}

.mingxi_item {
  margin-left: 25rpx;
  margin-top: 10rpx;
  width: 520rpx;
  /* 超过9个字省略号 */
  font-weight: 9;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
}

.mingxi_price {
  font-size: 25rpx;
  margin-left: 590rpx;
